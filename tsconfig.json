{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
  "paths": {
    "@/components/*": ["components/*"],
    "@/lib/*": ["lib/*"], //any other root-level paths
    "@/contracts/*": ["contracts/*"],
    "@/backend/*": ["backend/*"], 
    "@/api/*": ["api/*"], 
  }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/page.jsx", "app/home/home.jsx"],
  "exclude": ["node_modules"]
}
